@model ViewImagesViewModel

@{
    ViewData["Title"] = Model.subcategory.Name + " images";
}

<div class="d-flex justify-content-between align-items-end">
    <h1 class="fw-light text-center text-lg-start mt-4 mb-0">@Model.subcategory.Name gallery</h1>
    <a asp-action="AddImages" asp-route-subcategoryId="@Model.subcategory.Id"
       class="btn btn-primary">Add Images</a>
</div>
<hr class="mt-2 mb-5">
<div class="row text-center text-lg-start">
    @foreach (var photo in Model.photos)
    {
        <div class="col-lg-3 col-md-4 col-6">
            <div class="d-block mb-4 h-100 show-image">
                <img class="img-fluid img-thumbnail" src="~/images/@photo.PhotoPath" alt="">
                <form method="post">
                    <button asp-action="DeleteImage" asp-route-photoId="@photo.Id" 
                    class="delete btn-outline-danger" type="submit">X</button>
                </form>
            </div>
        </div>
    }
</div>